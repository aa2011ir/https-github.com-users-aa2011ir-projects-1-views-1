StartMoving()
{
	signal SIG_WALK;
	set-signal-mask SIG_WALK;
	bMoving = TRUE;
	start-script UnitSpeed();
	start-script walk();
}

StopMoving()
{
	bMoving = FALSE;
	signal SIG_WALK;
	call-script StopWalking();
}

Create()
{
	hide flare;
	hide aimy1;
	restore_delay = 3000;
	bMoving = FALSE;
	animSpeed = 10;
	start-script StopMoving();
}

SetMaxReloadTime(Func_Var_1)
{
	restore_delay = Func_Var_1 * 5;
}

